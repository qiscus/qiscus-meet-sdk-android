<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/background"
tools:context=".activity.HomeActivity">


    <LinearLayout
            android:gravity="center_vertical"
            android:background="@color/qiscusBlueTransparant"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="49dp">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="52dp"
                android:orientation="vertical">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <ImageView
                        android:id="@+id/logo_meet"
                        android:src="@drawable/ic_logo_meet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/env"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"/>
            </LinearLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="23dp"
                    android:paddingBottom="12dp"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:text="Welcome to"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="36sp"
                    android:text="Qiscus Meet"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="User Name"/>
            <EditText
                    android:id="@+id/et_name"
                    android:layout_marginTop="15dp"
                    android:height="48dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="13dp"
                    android:lineSpacingExtra="4sp"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:background="@drawable/edit_background_rectangle"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/white"
                    android:hint="Type your username" />

        </LinearLayout>

        <LinearLayout
                android:paddingTop="23dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Room Name"/>
            <EditText
                    android:id="@+id/et_room"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="13dp"
                    android:lineSpacingExtra="4sp"
                    android:height="48dp"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:background="@drawable/edit_background_rectangle"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/white"
                    android:hint="Type your room name" />

        </LinearLayout>

        <Button
                android:layout_marginTop="50dp"
                android:id="@+id/btn_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_rectangle"
                android:paddingLeft="49dp"
                android:paddingTop="18dp"
                android:paddingRight="49dp"
                android:paddingBottom="18dp"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="start conference"
                android:textColor="@color/qiscusBlue" />

    </LinearLayout>

    <TextView
            android:id="@+id/tv_privacy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_marginBottom="12dp"
            android:text="Privacy Policy"/>

</RelativeLayout>